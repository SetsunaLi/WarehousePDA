<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                style="@style/layout_style1"
                android:orientation="horizontal"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">

                <TextView
                    style="@style/text_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/device_prower_key" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text1"
                    style="@style/text_style4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/text31" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                style="@style/layout_style2"
                android:background="@drawable/bg_layout"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seekbar1"
                    style="@style/seekbar_style_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="25"/>
            </LinearLayout>

            <TextView
                style="@style/text_style2"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:text="@string/text32" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout2"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    style="@style/layout_style2"
                    android:layout_marginLeft="30px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        style="@style/text_style3"
                        android:text="@string/text34"
                        />
                    <Spinner
                        android:id="@+id/spinner1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    style="@style/layout_style2"
                    android:layout_marginLeft="30px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        style="@style/text_style3"
                        android:text="@string/text35"
                        />
                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    style="@style/layout_style2"
                    android:layout_marginLeft="30px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        style="@style/text_style3"
                        android:text="@string/text36"
                        />
                    <Spinner
                        android:id="@+id/spinner3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    style="@style/layout_style2"
                    android:layout_marginLeft="30px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        style="@style/text_style3"
                        android:text="@string/text37"
                        />
                    <Spinner
                        android:id="@+id/spinner4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"></Spinner>
                </LinearLayout>
            </LinearLayout>

            <TextView
                style="@style/text_style2"
                android:layout_width="wrap_content"
                android:layout_height="50dip"
                android:layout_marginLeft="30px"
                android:gravity="center_vertical"
                android:text="@string/text33"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_layout2"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    style="@style/layout_style2"
                    android:layout_marginLeft="30px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        style="@style/text_style3"
                        android:text="@string/text38"
                        />
                    <Spinner
                        android:id="@+id/spinner5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"></Spinner>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    style="@style/layout_style2"
                    android:layout_marginLeft="30px"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center_vertical"
                        style="@style/text_style3"
                        android:text="@string/text39"
                        />
                    <Spinner
                        android:id="@+id/spinner6"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:layout_marginLeft="10px"
                        android:gravity="center_vertical"></Spinner>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                style="@style/layout_style1"
                android:orientation="horizontal"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">

                <TextView
                    style="@style/text_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/device_work_time_key"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text2"
                    style="@style/text_style4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="300ms"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                style="@style/layout_style2"
                android:background="@drawable/bg_layout"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seekbar2"
                    style="@style/seekbar_style_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="65535"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                style="@style/layout_style1"
                android:orientation="horizontal"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px">

                <TextView
                    style="@style/text_style2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="@string/device_interval_time_key"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/text3"
                    style="@style/text_style4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="0ms"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                style="@style/layout_style2"
                android:background="@drawable/bg_layout"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatSeekBar
                    android:id="@+id/seekbar3"
                    style="@style/seekbar_style_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="65535"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
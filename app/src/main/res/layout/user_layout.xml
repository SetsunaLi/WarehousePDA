<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="220dip"
        android:background="@drawable/bg_top">

        <ImageView
            android:id="@+id/iv"
            android:layout_width="100dip"
            android:layout_height="100dip"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:background="@drawable/img_style_1" />

        <TextView
            android:id="@+id/tv1"
            style="@style/text_style1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:text="@string/text18"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv2"
            style="@style/text_style2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:background="@drawable/text_style_1"
            android:text="@string/text19" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        style="@style/layout_style2"
        android:background="@drawable/bg_layout"
        android:layout_marginTop="20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:gravity="center_vertical"
            style="@style/text_style3"
            android:text="@string/user_time_title"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@style/text_style1"
            android:text="@string/text20"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/bg_layout"
        android:layout_marginTop="20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:gravity="center_vertical"
            style="@style/text_style3"
            android:text="@string/text21"
            />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@style/text_style1"
            android:text="@string/text22"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/bg_layout"
        android:layout_marginTop="20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20px"
            android:layout_marginRight="20px"
            android:gravity="center_vertical"
            style="@style/text_style3"
            android:text="@string/text23"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:text="@string/text24"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        style="@style/button_style7"/>
    </LinearLayout>
</LinearLayout>
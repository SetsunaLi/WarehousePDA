<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350px"
        android:background="@drawable/bg_top">
        <ImageView
            android:id="@+id/iv"
            android:layout_width="180px"
            android:layout_height="180px"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20px"
            android:background="@drawable/img_style_1"/>
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/iv"
            android:layout_marginTop="20px"
            style="@style/text_style1"
            android:textStyle="bold"
            android:text="@string/text18"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/tv1"
            android:layout_marginTop="20px"
            android:background="@drawable/text_style_1"
            style="@style/text_style2"
            android:text="@string/text19"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        tools:mockup_opacity="0.35"
        android:background="@drawable/layout_style_1"
        android:layout_marginTop="20px">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
    <Button
        android:id="@+id/button"
        android:layout_width="540px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal|bottom"
        android:background="@drawable/button_style_2"/>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">
  <!--  <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </RelativeLayout>-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:alpha="0.6"
        android:background="@color/colorDialogContent"
        android:layout_weight="2"
        android:layout_marginTop="20px">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="350dip"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/head"
                    android:layout_width="500dip"
                    android:layout_height="45dip"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:layout_width="25dip"
                        android:layout_height="match_parent"
                        android:src="@drawable/set_up"
                        />
                    <View
                        style="@style/view_item_mid"/>
                    <TextView
                        android:id="@+id/item2"
                        android:layout_width="120dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        style="@style/text_style6"
                        android:text="EPC码"
                        />
                    <View
                        style="@style/view_item_mid"/>
                    <TextView
                        android:id="@+id/item3"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        style="@style/text_style6"
                        android:text="布号"
                        />
                    <View
                        style="@style/view_item_mid"/>
                    <TextView
                        android:id="@+id/item4"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        style="@style/text_style6"
                        android:text="布票号"
                        />
                    <View
                        style="@style/view_item_mid"/>
                    <TextView
                        android:id="@+id/item5"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        style="@style/text_style6"
                        android:text="缸号"
                        />
                    <View
                        style="@style/view_item_mid"/>
                    <TextView
                        android:id="@+id/item6"
                        android:layout_width="50dip"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:singleLine="true"
                        style="@style/text_style6"
                        android:text="重量"
                        />
                </LinearLayout>
                <View
                    style="@style/view_item_bottom"/>
                <ListView
                    android:id="@+id/list1"
                    android:fastScrollEnabled="true"
                    android:drawSelectorOnTop="false"
                    android:cacheColorHint="@null"
                    android:dividerHeight="1.0dip"
                    android:layout_width="350dip"
                    android:layout_height="match_parent"
                    android:listSelector="@drawable/item_selector"
                    >
                </ListView>
            </LinearLayout>
            <!--        <android.support.v7.widget.RecyclerView
                        android:id="@+id/recyleview1"
                        android:layout_width="455dip"
                        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>-->
        </HorizontalScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="10"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/button_blink"
            style="@style/button_style5"
            android:layout_width="match_parent"
            android:text="@string/button14"
            android:layout_marginLeft="30px"
            android:layout_marginRight="20px"
            android:layout_weight="1"
            />
        <Button
            android:id="@+id/button_ok"
            style="@style/button_style6"
            android:layout_width="match_parent"
            android:text="@string/btn_stockRemoval"
            android:layout_marginLeft="20px"
            android:layout_marginRight="30px"
            android:layout_weight="1"
            />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/bg_layout"
        android:layout_marginTop="20px"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            style="@style/text_style2"
            android:text="@string/system_version_key"
            />
        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            style="@style/text_style1"
            android:textSize="36px"
            android:text="@string/system_version_summary"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/bg_layout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            style="@style/text_style2"
            android:text="@string/system_ip_key"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            style="@style/text_style1"
            android:textSize="36px"
            android:text="@string/system_ip_summary"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/bg_layout2"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            style="@style/text_style2"
            android:text="@string/system_port_key"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            style="@style/text_style1"
            android:textSize="36px"
            android:text="@string/system_port_summary"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/bg_layout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            style="@style/text_style2"
            android:text="@string/system_device_number_key"
            />
        <TextView
            android:id="@+id/tv4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginLeft="10px"
            android:gravity="center_vertical"
            style="@style/text_style1"
            android:textSize="36px"
            android:text="@string/system_device_number_summary"
            />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="90px"
        style="@style/text_style2"
        android:textSize="40px"
        android:layout_marginLeft="40px"
        android:gravity="center_vertical"
        android:text="@string/system_push_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:background="@drawable/bg_layout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            style="@style/text_style2"
            android:alpha="1"
            android:textSize="36px"
            android:text="@string/system_push_key"
            />
        <Switch
            android:id="@+id/switch1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            style="@style/switch_style_1"
            android:switchMinWidth="80px"
            android:checked="true"
            />
        </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></RelativeLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="540px"
        android:layout_height="100px"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:background="@drawable/button_style_2"
        android:text="@string/text30"
        style="@style/text_style1"/>
</LinearLayout>
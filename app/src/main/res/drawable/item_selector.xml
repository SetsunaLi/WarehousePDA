<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!--    <item android:state_pressed="true" android:color="@color/colorDialogTitleBG"/>
    <item android:state_pressed="false" android:color="@color/colorZERO"/>
    <item android:0="true" android:color="@color/colorDialogTitleBG"/>-->
    <item android:state_pressed="true">
        <shape>
            <!-- 设置背景填充色为黑色 -->
            <solid android:color="@color/colorDialogTitleBG"/>
            <!-- 设置边框宽度为1dp，边框颜色为白色 -->
            <stroke android:width="1dp" android:color="@color/colorEditText" />
            <!-- 设置按钮圆角半径为5dp -->
            <!--<corners android:radius="5dp" />-->
            <!-- 设置按钮中间文字距上下左右都为10dp的间距 -->
            <!--<padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />-->
        </shape>
    </item>
    <!-- 正常状态下(非点击)的效果 -->
    <item android:state_pressed="false">
        <shape>
            <!-- 设置背景填充色-->
            <solid android:color="@color/colorZERO"/>
            <!-- 设置边框宽度为1dp，边框颜色 -->
            <stroke android:width="1dp" android:color="@color/colorZERO" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape>
            <!-- 设置背景填充色 -->
            <solid android:color="@color/colorDialogTitleBG"/>
            <!-- 设置边框宽度为1dp，边框颜色 -->
            <stroke android:width="1dp" android:color="@color/colorEditText" />
        </shape>
    </item>
    <item android:state_selected="false">
        <shape>
            <!-- 设置背景填充色 -->
            <solid android:color="@color/colorZERO"/>
            <!-- 设置边框宽度为1dp，边框颜色 -->
            <stroke android:width="1dp" android:color="@color/colorZERO" />
        </shape>
    </item>
</selector>